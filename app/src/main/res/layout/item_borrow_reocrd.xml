<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBook"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/common_images_nomal" />

        <TextView
            android:id="@+id/tvBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBook"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:text="DAASDASDASDASDASDASDASDASDASDASDADADADA" />

        <TextView
            android:id="@+id/tvBorrowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBook"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBook"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="dads" />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvBook"
            android:layout_marginRight="20dp"
            android:text="sdsdsds" />
    </RelativeLayout>
</LinearLayout>